{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		// For JavaScript configs.
		"allowJs": true,
		"isolatedModules": true,
		"lib": [
			"ESNext"
		],
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		"noEmit": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext"
	},
	"include": [
		"vite.config.ts",
		"eslint.config.js",
		"stylelint.config.js"
	]
}
