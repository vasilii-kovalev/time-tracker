{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		"noEmit": true,
		"noUncheckedIndexedAccess": true,
		"paths": {
			"@/*": [
				"./src/*"
			],
		},
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext"
	},
	"include": [
		"src"
	]
}
